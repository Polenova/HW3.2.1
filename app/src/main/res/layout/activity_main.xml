            android:orientation="horizontal"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_7"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_8"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_9"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_mult"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/lageLetters" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerBtns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linerBtns3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_4"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_5"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_6"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_minus"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/lageLetters" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerBtns1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linerBtns2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_plus"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="@dimen/lageLetters" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerBtns0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linerBtns1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:context=".MainActivity">

            <Button
                android:id="@+id/btn0"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_dot"
                android:textSize="@dimen/lageLetters" />

            <Button
                android:id="@+id/btnResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_result"
                android:textSize="@dimen/lageLetters" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>